<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <!-- 전체 레이아웃 정의 -->
    <definition name="layout" template="/WEB-INF/views/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
        <put-attribute name="sidebar" value="/WEB-INF/views/common/sidebar.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
        <put-attribute name="content" value="" />
    </definition>

    <!-- 역할 관리 화면 -->
    <definition name="rolemanageListView" extends="layout">
        <put-attribute name="content" value="/WEB-INF/views/rolemanage/rolemanage-list.jsp" />
    </definition>
</tiles-definitions>